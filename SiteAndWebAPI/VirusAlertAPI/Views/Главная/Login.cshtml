<div class="loginpage">
    <div class="loginH1">Вход</div>
    <div >
        <input type="text" class="logininput" id="email" value="@Model.Email" placeholder="Адрес электронной почты" />
    </div>
    <div >
        <input type="password"  class="logininput" id="pass" value="@Model.Password" placeholder="Пароль" />
    </div>
    <a class="linkbutton" onclick="applogin(document.getElementById('email').value, document.getElementById('pass').value, '@Model.Uri')">Войти</a>
    @Html.ActionLink("Отмена", "Index", "Главнаяы", new { area = "" }, new { @class = "linkbutton" })
    </div>

